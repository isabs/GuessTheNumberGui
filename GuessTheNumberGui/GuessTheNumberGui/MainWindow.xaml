<Window x:Class="GuessTheNumberGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuessTheNumberGui"
        mc:Ignorable="d"
        Title="Guess the number! by isabs" Height="350" Width="640">
    <Grid Background="Black">
        
        <Button x:Name="btnCheckStart" 
                Background="DarkSlateBlue" 
                Foreground="White" 
                Content="Start" 
                HorizontalAlignment="Left" 
                Margin="125,275,0,0" 
                VerticalAlignment="Top" 
                Width="75"/>
        
        <Label x:Name="lblResults" 
               Content="" 
               Foreground="White" 
               HorizontalAlignment="Left" 
               Margin="320,10,0,0" 
               VerticalAlignment="Top" 
               Height="299" 
               Width="306"/>
        
        <Label x:Name="lblHeading" 
               Content="Guess the random number" 
               Foreground="White" 
               HorizontalAlignment="Left" 
               Margin="10,35,0,0" 
               VerticalAlignment="Top" 
               Width="155"/>
        
        <ComboBox x:Name="cmbMode" 
                  Background="DarkSlateBlue" 
                  Foreground="DarkSlateBlue" 
                  HorizontalAlignment="Left" 
                  Margin="20,80,0,0" 
                  VerticalAlignment="Top" 
                  Width="120" 
                  SelectionChanged="comboBox_SelectionChanged" 
                  ItemsSource="{Binding Path=Modes}"
                  
                   />
        <!--ItemsSource="{Binding Source={x:Static local:MainWindow.Lista}, Path=Lista}"-->
        <!--ItemsSource="{Binding Lista}" d:DataContext="{d:DesignInstance local:MainWindow}"-->
        <!--ItemsSource="{Binding Lista}" d:Lista="{d:string }-->

        <CheckBox x:Name="chkWithSum" 
                  Foreground="White" 
                  Background="DarkSlateBlue" 
                  Content="With sum" 
                  HorizontalAlignment="Left" 
                  Margin="229,80,0,0" 
                  VerticalAlignment="Top"/>
        
        <Label x:Name="lblSum" 
               Content="" 
               Foreground="White" 
               HorizontalAlignment="Left" 
               Margin="125,230,0,0" 
               VerticalAlignment="Top" 
               Width="75"/>

    </Grid>
</Window>
